<h1 class="titulo">Crear cuenta</h1>

<%= form_with model: @user, url: register_path, local: true do |form| %>
  <div class="input-group">
    <%= form.label :email, "Correo electrónico" %>
    <%= form.text_field :email, class: "input", placeholder: "ejemplo@email.com" %>
  </div>
  
  <div class="input-group">
    <%= form.label :password, "Contraseña" %>
    <%= form.password_field :password, class: "input", placeholder: "********" %>
  </div>

  <div class="input-group">
    <%= form.label :password_confirmation, "Repetir contraseña" %>
    <%= form.password_field :password_confirmation, class: "input", placeholder: "********" %>
  </div>

  <div class="submit-group">
    <%= form.submit "Crear cuenta", class: "btn-submit" %>
  </div>
<% end %>

<div class="registro">
  <p>¿Ya tienes una cuenta? <%= link_to 'Inicia sesión', login_path, class: 'link-register' %></p>
</div>
