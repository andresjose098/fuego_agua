<h1 class="titulo">Iniciar sesión</h1>

<%= form_with scope: resource_name, url: session_path(resource_name), local: true do |form| %>
  <div class="input-group">
    <%= form.label :email, "Correo electrónico" %>
    <%= form.email_field :email, class: "input", placeholder: "ejemplo@email.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="input-group">
    <%= form.label :password, "Contraseña" %>
    <%= form.password_field :password, class: "input", placeholder: "********", autocomplete: "current-password" %>
  </div>

  <div class="submit-group">
    <%= form.submit "Iniciar sesión", class: "btn-submit" %>
  </div>
<% end %>

<div class="registro">
  <p>¿No tienes cuenta? <%= link_to 'Regístrate', new_user_registration_path, class: 'link-register' %></p>
</div>
